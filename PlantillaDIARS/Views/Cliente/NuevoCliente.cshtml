@using CapaEntidades
@model EntCliente



<div class="card mt-4 mb-4">
    <div class="card-header text-center">
        <h2>Registrarse</h2>
        <hr />
    </div>
    <div class="card-body">
        <div class="container col-7">

            @using (Html.BeginForm("NuevoCliente", "Cliente"))
            {
                <div class="form-group">
                    <label>Apellidos</label>
                    @Html.TextBoxFor(m => m.ApellidosCliente, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Nombre</label>
                    @Html.TextBoxFor(m => m.NombreCliente, new { @class = "form-control" })
                </div>
                <div class="form-group date">
                    <label>Fecha de nacimiento</label>
                    @Html.TextBoxFor(m => m.FechaNacimiento, new { @class = "form-control" })<span class="input-group-addon"></span>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="rbS" id="exampleRadios1" value="option1">
                        <label class="form-check-label" for="exampleRadios1">
                            Masculino
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="rbS" id="exampleRadios2" value="option2">
                        <label class="form-check-label" for="exampleRadios2">
                            Femenino
                        </label>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="card-footer text-center">
        <button type="submit" class="btn btn-primary">Registrar</button>    
    </div>
   
</div>  

@section scripts
{
    <script>
        $('.form-group.date').datepicker({
        });
    </script>
}